    <script>
        // Create floating hearts in background
        function createHeartBackground() {
            const heartBg = document.getElementById('heartBg');
            const colors = ['#ff6b6b', '#f06595', '#cc5de8', '#da77f2', '#faa2c1'];
            
            for (let i = 0; i < 30; i++) {
                const heart = document.createElement('div');
                heart.innerHTML = '❤️';
                heart.classList.add('heart-particle');
                
                // Random positioning
                const left = Math.random() * 100;
                const size = Math.random() * 20 + 10;
                const duration = Math.random() * 20 + 10;
                const delay = Math.random() * 20;
                
                heart.style.left = `${left}%`;
                heart.style.fontSize = `${size}px`;
                heart.style.animationDuration = `${duration}s`;
                heart.style.animationDelay = `${delay}s`;
                
                heartBg.appendChild(heart);
            }
        }
        
        // Love reasons array
        const loveReasons = [
            "Caramu tersenyum selalu membuat hatiku meleleh.",
            "Kau selalu tahu cara membuatku tertawa bahkan di hari-hari terburukku.",
            "Kebaikan hatimu yang tak terbatas pada semua orang dan makhluk hidup.",
            "Caramu melihatku seolah-olah aku adalah orang paling spesial di dunia.",
            "Kau mendukungku dalam semua impian dan tujuanku.",
            "Kau menerimaku apa adanya, dengan semua kekurangan dan kelebihanku.",
            "Kita bisa berbicara berjam-jam tanpa merasa bosan.",
            "Kau membuatku ingin menjadi versi terbaik dari diriku.",
            "Pelukanmu adalah tempat ternyaman di dunia bagiku.",
            "Kita bisa diam bersama dan tetap merasa nyaman.",
            "Kau adalah rumah bagiku, di manapun kita berada.",
            "Kau membuatku merasa dicintai setiap hari."
        ];
        
        // Initialize variables
        let currentReasonIndex = 0;
        
        // DOM Ready
        document.addEventListener('DOMContentLoaded', function() {
            createHeartBackground();
            
            // Open envelope
            document.getElementById('openEnvelope').addEventListener('click', function() {
                document.getElementById('envelope').classList.add('hidden');
                document.getElementById('giftContent').classList.remove('hidden');
            });
            
            // New reason button
            document.getElementById('newReasonBtn').addEventListener('click', function() {
                const reasonText = document.getElementById('reasonText');
                reasonText.style.opacity = 0;
                
                setTimeout(() => {
                    currentReasonIndex = (currentReasonIndex + 1) % loveReasons.length;
                    reasonText.textContent = loveReasons[currentReasonIndex];
                    reasonText.style.opacity = 1;
                }, 300);
            });
            
            // Special message modal
            document.getElementById('specialMsgBtn').addEventListener('click', function() {
                const modal = document.getElementById('specialModal');
                modal.classList.remove('hidden');
                setTimeout(() => {
                    modal.classList.add('show');
                }, 10);
            });
            
            // Close modal
            document.getElementById('closeModal').addEventListener('click', function() {
                const modal = document.getElementById('specialModal');
                modal.classList.remove('show');
                setTimeout(() => {
                    modal.classList.add('hidden');
                }, 300);
            });
        });
    </script>
